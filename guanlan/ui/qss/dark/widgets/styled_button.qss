/* 危险操作按钮（深色主题） */
DangerPushButton {
    background-color: rgba(192, 64, 64, 0.85);
    border: 1px solid rgba(220, 80, 80, 0.5);
    border-radius: 6px;
    color: white;
    padding: 2px 12px;
    font-weight: bold;
}

DangerPushButton:hover {
    background-color: rgba(220, 80, 80, 0.95);
    border: 1px solid rgba(240, 100, 100, 0.7);
}

DangerPushButton:pressed {
    background-color: rgba(160, 48, 48, 0.95);
}
